<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-user-table" author="ntozic">
        <createTable tableName="users">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" />
            </column>
            <column name="reference" type="varchar(36)">
                <constraints nullable="true" unique="true" />
            </column>
            <column name="email" type="varchar2(100)">
                <constraints unique="true" nullable="false" />
            </column>
            <column name="password" type="varchar2(200)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-sample-user" author="ntozic">
        <insert tableName="users">
            <column name="email" value="nemanja.tozic@email.com" />
            <column name="reference" value="08819509-f813-43ed-9200-b1436d88f85d" />
            <!-- password is 'password' -->
            <column name="password" value="$2a$10$oMU9KUm6gOqte348xLEyU.Nbst1XJc7jYpSShhtcN7laNqFAFpzOW" />
        </insert>
    </changeSet>
</databaseChangeLog>